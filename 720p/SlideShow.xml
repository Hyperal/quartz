<window id="2007">
  <controls>
    <control type="label">
      <include>WindowID</include>
      <label>SlideShow.xml</label>
    </control>
    <control type="group">
      <visible>Slideshow.IsActive</visible>
      <animation condition="Slideshow.IsPaused" effect="fade" start="100" end="0" time="200">conditional</animation>
      <animation condition="!Slideshow.IsPaused" effect="fade" start="0" end="100" time="400">conditional</animation>
      <animation condition="!Slideshow.IsPaused" effect="fade" start="100" end="0" delay="2000" time="400">conditional</animation>
      <posx>60</posx>
      <posy>580</posy>
      <control type="image">
        <posx>0</posx>
        <posy>0</posy>
        <width>86</width>
        <height>80</height>
        <texture>img/BlackDotST2.png</texture>
      </control>
      <control type="image">
        <posx>4</posx>
        <posy>0</posy>
        <width>80</width>
        <height>80</height>
        <texture>OSD/OSDProgressPlay.png</texture>
      </control>
    </control>
    <control type="group" id="13">
      <visible>Slideshow.IsPaused</visible>
      <animation effect="fade" start="0" end="100" time="400">Visible</animation>
      <posx>60</posx>
      <posy>580</posy>
      <control type="image">
        <posx>0</posx>
        <posy>0</posy>
        <width>86</width>
        <height>80</height>
        <texture>img/BlackDotST2.png</texture>
      </control>
      <control type="image">
        <posx>4</posx>
        <posy>0</posy>
        <width>80</width>
        <height>80</height>
        <texture>OSD/OSDProgressPause.png</texture>
      </control>
    </control>
    <include>Debug_Grid</include>
  </controls>
</window>
