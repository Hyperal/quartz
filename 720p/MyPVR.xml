    <control type="group" description="Side menu 9000 group">
      <visible allowhiddenfocus="true">ControlGroup(9000).HasFocus()</visible>
      <include>DialogOpenCloseVisible</include>
      <control type="image" description="List back">
        <posx>242</posx>
        <posy>38</posy>
        <width>788</width>
        <height>694</height>
        <aspectratio>stretch</aspectratio>
        <texture border="150">img/Dialog.png</texture>
      </control>
      <control type="grouplist" id="9000">
        <posx>400</posx>
        <posy>158</posy>
        <width>480</width>
        <height>440</height>
        <itemgap>-54</itemgap>
        <onleft>50</onleft>
        <onright>50</onright>
        <onup>9000</onup>
        <ondown>9000</ondown>
        <scrolltime>200</scrolltime>
        <orientation>vertical</orientation>
        <control type="button" id="32" description="TV Channels">
          <include>9000Buttons</include>
          <label>19023</label>
        </control>
        <control type="button" id="33" description="Radio Channels">
          <onleft>12</onleft>
          <onright>12</onright>
          <label>19024</label>
          <include>9000Buttons</include>
        </control>
        <control type="button" id="31" description="TV Guide">
          <include>9000Buttons</include>
          <label>$LOCALIZE[19222]: $LOCALIZE[19030]</label>
        </control>
        <control type="button" id="34" description="Recordings">
          <include>9000Buttons</include>
          <label>19163</label>
        </control>
        <control type="button" id="35" description="Timers">
          <include>9000Buttons</include>
          <label>19040</label>
        </control>
        <control type="button" id="36" description="Search">
          <include>9000Buttons</include>
          <label>137</label>
        </control>
        <control type="button" id="699" description="Playing">
          <enable>Player.HasMedia</enable>
          <include>9000Buttons</include>
          <label>$LOCALIZE[31023]$INFO[MusicPlayer.Title,: ]$INFO[VideoPlayer.Title,: ]</label>
          <onclick>fullscreen</onclick>
          <animation effect="fade" start="100" end="60" time="100" condition="!Player.HasMedia">Conditional</animation>
        </control>
      </control>
    </control>
    <control type="group">
      <control type="label" description="Clock other windows">
        <visible>![Control.IsVisible(53) | Control.IsVisible(55)]</visible>
