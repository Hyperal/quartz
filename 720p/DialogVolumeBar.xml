<window id="104">
  <defaultcontrol always="true">-</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <animation effect="fade" start="100" end="0" time="500" reversible="false">WindowClose</animation>
  <controls>
    <control type="label">
      <posx>400</posx>
      <posy>80</posy>
      <include>DialogID</include>
      <label>DialogVolumeBar.xml</label>
    </control>
	<control type="group">
        <visible>player.passthrough</visible>
        <animation effect="fade" start="0" end="100" time="100" reversible="false">Visible</animation>
		<control type="image" description="Lite Volume Logo">
          <posx>340</posx>
          <posy>320</posy>
          <width>600</width>
          <height>80</height>
          <aspectratio>stretch</aspectratio>
          <texture border="3">img/BlackRounded.png</texture>
        </control>
        <control type="label" description="Passthrough Label">
          <wrapmultiline>true</wrapmultiline>
		  <posx>340</posx>
          <posy>330</posy>
          <width>600</width>
          <height>60</height>
          <align>center</align>
          <font>size24</font>
          <textcolor>White</textcolor>
          <label>$LOCALIZE[416][CR]$LOCALIZE[29802]</label>
        </control>
      </control>
    <control type="group">
      <posx>586</posx>
      <posy>360</posy>
      <control type="group">
        <visible>!player.passthrough + IntegerGreaterThan(player.volume,0)</visible>
        <animation effect="fade" start="0" end="100" time="100" reversible="false">Visible</animation>
        <control type="image" description="Min Volume">
          <posx>0</posx>
          <posy>0</posy>
          <width>108</width>
          <height>108</height>
          <aspectratio>keep</aspectratio>
          <texture>img/Speaker.png</texture>
        </control>
        <control type="progress" id="1" description="Progress control">
          <posx>6</posx>
          <posy>94</posy>
          <width>96</width>
          <height>8</height>
          <lefttexture>-</lefttexture>
          <righttexture>-</righttexture>
          <overlaytexture>-</overlaytexture>
          <texturebg border="1">img/BlackDotT.png</texturebg>
          <midtexture border="3">OSD/VolProgressMid.png</midtexture>
          <info>Player.Volume</info>
        </control>
      </control>
      
    </control>
    <include>Debug_Grid</include>
  </controls>
</window>
